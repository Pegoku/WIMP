<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.pegoku.wimp.FirstFragment"
        android:label="Shipments"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_ShipmentInfo"
            app:destination="@id/ShipmentInfo" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.pegoku.wimp.SecondFragment"
        android:label="Add shipment"
        tools:layout="@layout/fragment_second">>
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>


    <fragment
        android:id="@+id/ShipmentInfo"
        android:name="com.pegoku.wimp.ShipmentInfo"
        android:label="Shipment info"
        tools:layout="@layout/shipment_info">

        <action
            android:id="@+id/action_ShipmentInfo_to_FirstFragment"
            app:destination="@id/FirstFragment" />



    </fragment>
</navigation>